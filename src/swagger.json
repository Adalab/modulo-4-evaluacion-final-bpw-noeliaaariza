{
    "openapi": "3.0.0",
    "info": {
      "title": "Snake API",
      "version": "1.0.0",
      "description": "API para clasificación de diferentes especies de serpientes en el mundo"
    },
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Servidor de desarrollo"
      }
    ],
    "paths": {
      "/snakes": {
        "get": {
          "summary": "Lista todas las serpientes",
          "responses": {
            "200": {
              "description": "Operación exitosa",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean"
                      },
                      "projects": {
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/snakes"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/createproject": {
        "post": {
          "summary": "Crea un nuevo proyecto",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewProject"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Proyecto creado exitosamente"
            }
          }
        }
      },
      "/project/{idproject}": {
        "get": {
          "summary": "Obtiene detalles de un proyecto específico",
          "parameters": [
            {
              "name": "idproject",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Operación exitosa"
            },
            "404": {
              "description": "Proyecto no encontrado"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "snakes": {
          "type": "object",
          "properties": {
            "idProject": {
              "type": "integer"
            }
     
          }
        },
        "NewProject": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "slogan": {
              "type": "string"
            }
       
          }
        }
      }
    }
  }